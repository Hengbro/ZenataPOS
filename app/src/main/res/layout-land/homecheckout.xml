<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_400sdp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/_390sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginMedium">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_dehaze"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marginExtra"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Library"
                            android:textSize="@dimen/textBody1"
                            android:textColor="@color/natural_900"
                            android:padding="@dimen/paddingMedium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favorites"
                            android:textSize="@dimen/textBody1"
                            android:textColor="@color/natural_900"
                            android:padding="@dimen/paddingMedium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keypad"
                            android:textSize="@dimen/textBody1"
                            android:textColor="@color/natural_900"
                            android:padding="@dimen/paddingMedium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tables"
                            android:textSize="@dimen/textBody1"
                            android:textColor="@color/natural_900"
                            android:padding="@dimen/paddingMedium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bills"
                            android:textSize="@dimen/textBody1"
                            android:textColor="@color/natural_900"
                            android:padding="@dimen/paddingMedium"/>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_more_vert"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/paddingMedium"/>

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingSmall"
                android:background="@color/gray5"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/_395sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginNormal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnmenu"
                        android:padding="@dimen/paddingNormal"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/red">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Morning Menu"
                            android:textStyle="bold"
                            android:textSize="@dimen/textBody1"
                            android:textColor="@color/white"
                            android:padding="@dimen/paddingSmall"/>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:padding="@dimen/paddingNormal"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/_4sdp"
                        app:cardBackgroundColor="@color/red5"
                        android:layout_toEndOf="@+id/btnmenu"
                        android:layout_marginStart="@dimen/marginLarge">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E-Money"
                            android:textStyle="bold"
                            android:textSize="@dimen/textBody1"
                            android:textColor="@color/red4"
                            android:padding="@dimen/paddingSmall"/>

                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/_390sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddingNormal"
                android:layout_marginStart="@dimen/marginNormal"
                android:background="@drawable/bg_input">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_search"
                    android:padding="@dimen/paddingNormal"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginBox"
                    android:hint="Search for product or categories"
                    android:textColor="@color/natural_900"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textBody1"
                    android:layout_toEndOf="@+id/btn_search"
                    android:background="@color/gray5"
                    app:endIconMode="clear_text" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="@dimen/textHeading4"
                android:textStyle="bold"
                android:layout_margin="@dimen/marginNormal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray3"
                android:layout_margin="@dimen/marginNormal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/pdTempatRekomend"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_100sdp"
                    android:visibility="gone"
                    android:layout_centerInParent="true" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_categories"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product"
                android:textSize="@dimen/textHeading4"
                android:textStyle="bold"
                android:layout_margin="@dimen/marginNormal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray3"
                android:layout_margin="@dimen/marginNormal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_100sdp"
                    android:visibility="gone"
                    android:layout_centerInParent="true" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_product"/>

            </RelativeLayout>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_162sdp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No product"
                            android:textSize="@dimen/textHeading4"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:padding="@dimen/paddingMedium"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_more_vert"
                            android:layout_alignParentEnd="true"
                            android:padding="@dimen/paddingMedium"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@color/gray5">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:text="Having here"
                            android:textColor="@color/natural_900"
                            android:textSize="@dimen/textBody1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/paddingNormal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_view"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_account_circle" />

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_3sdp"
                                android:text="Add costumer"
                                android:textStyle="bold"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textHeading5" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/baseline_chevron_right"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/paddingNormal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_3d_rotation" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_3sdp"
                                android:text="Add a table"
                                android:textStyle="bold"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textHeading5" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/baseline_chevron_right"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray4"
                    android:layout_margin="@dimen/marginNormal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/marginNormal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btn_savebill"
                            android:padding="@dimen/paddingMedium"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_margin="@dimen/marginSmall"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@drawable/bg_box_rectangle_notsolid"
                            app:cardElevation="@dimen/_4sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save bill"
                                android:textStyle="bold"
                                android:textSize="@dimen/textBody1"
                                android:textColor="@color/blue_400"
                                android:layout_gravity="center"
                                android:padding="@dimen/paddingSmall"/>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:padding="@dimen/paddingMedium"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_margin="@dimen/marginSmall"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:cardElevation="@dimen/_4sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Print bill"
                                android:textStyle="bold"
                                android:textSize="@dimen/textBody1"
                                android:textColor="@color/blue_400"
                                android:layout_gravity="center"

                                android:padding="@dimen/paddingSmall"/>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:padding="@dimen/paddingMedium"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_margin="@dimen/marginSmall"
                        android:backgroundTint="@color/blue_200"
                        app:cardElevation="@dimen/_4sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Print bill"
                            android:textStyle="bold"
                            android:textSize="@dimen/textBody1"
                            android:textColor="@color/white"
                            android:layout_gravity="center"

                            android:padding="@dimen/paddingSmall"/>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</RelativeLayout>