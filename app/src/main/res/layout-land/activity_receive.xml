<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_height"
                android:paddingStart="@dimen/paddingMedium"
                android:paddingEnd="@dimen/paddingMedium">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_clear"
                    android:layout_width="@dimen/buttonImage"
                    android:layout_height="@dimen/buttonImage"
                    android:src="@drawable/asset_ic_user"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/marginNormal"
                    android:tint="@color/colorPrimary"
                    android:padding="@dimen/buttonImagePadding"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/marginSmall"
                    android:layout_marginTop="@dimen/marginSmall"
                    android:layout_marginEnd="@dimen/marginSmall"
                    android:layout_marginBottom="@dimen/marginSmall"
                    android:layout_toEndOf="@+id/btn_clear"
                    android:text="Add cutomer"
                    android:textAppearance="@style/textAppearance.Body2.Bold"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/normal_height"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New sale"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/textAppearance.Body2.Bold"
                        android:layout_margin="@dimen/marginSmall"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/buttonImage"
                        android:layout_height="@dimen/buttonImage"
                        android:src="@drawable/asset_ic_right_alternate_arrow"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/marginNormal"
                        android:tint="@color/colorPrimary"
                        android:padding="@dimen/buttonImagePadding"/>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/medium_height"
                    android:text="Save taxes"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    style="@style/Button.Normal"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/large_height"
                android:layout_marginEnd="@dimen/extra_height">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/large_height"
                    android:layout_marginEnd="@dimen/extra_height"
                    android:layout_marginTop="@dimen/extra_height"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 16,000"
                        android:textAppearance="@style/textAppearance.Heading1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/marginNormal"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Out of Rp. 17,000"
                        android:textAppearance="@style/textAppearance.Body3"
                        android:gravity="center_horizontal"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How would you like to receive you receipt"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/marginExtra"
                        android:layout_marginBottom="@dimen/marginMedium"
                        android:textAppearance="@style/textAppearance.Body1"
                        android:gravity="center"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/large_height"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="@dimen/medium_height"
                            android:layout_marginEnd="@dimen/marginSmall"
                            style="@style/TextInputLayout.Rounded">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/medium_height"
                                android:gravity="center_vertical"
                                android:hint="Enter email"
                                android:paddingVertical="@dimen/paddingSmall"
                                android:paddingStart="@dimen/paddingNormal"
                                android:paddingEnd="@dimen/paddingNormal"
                                android:inputType="textMultiLine"
                                android:minLines="2"
                                android:maxLines="4"
                                android:textAppearance="@style/textAppearance.Body3"
                                android:textColor="@color/natural_900" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:layout_height="@dimen/medium_height"
                            android:layout_marginStart="@dimen/marginSmall"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/colorPrimary"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/buttonImage"
                                    android:layout_height="@dimen/buttonImage"
                                    android:src="@drawable/asset_ic_mail"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/marginLarge"
                                    android:padding="@dimen/buttonImagePadding"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Send by email"
                                    android:layout_marginEnd="@dimen/marginLarge"
                                    android:textAppearance="@style/textAppearance.Body2"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/large_height"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="@dimen/medium_height"
                            android:layout_marginEnd="@dimen/marginSmall"
                            style="@style/TextInputLayout.Rounded">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/medium_height"
                                android:gravity="center_vertical"
                                android:hint="Enter whatsapp"
                                android:paddingVertical="@dimen/paddingSmall"
                                android:paddingStart="@dimen/paddingNormal"
                                android:paddingEnd="@dimen/paddingNormal"
                                android:inputType="textMultiLine"
                                android:minLines="2"
                                android:maxLines="4"
                                android:textAppearance="@style/textAppearance.Body3"
                                android:textColor="@color/natural_900" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:layout_height="@dimen/medium_height"
                            android:layout_marginStart="@dimen/marginSmall"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/colorPrimary"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/buttonImage"
                                    android:layout_height="@dimen/buttonImage"
                                    android:src="@drawable/asset_ic_mail"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/marginLarge"
                                    android:padding="@dimen/buttonImagePadding"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Send by whatsapp"
                                    android:layout_marginEnd="@dimen/marginLarge"
                                    android:textAppearance="@style/textAppearance.Body2"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/medium_height"
                        style="@style/Button.OutlineButton.Primary"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/marginExtra"
                        android:text="Print receipt"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>